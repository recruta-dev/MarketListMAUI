<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MarketList_MAUI"
             xmlns:converters="clr-namespace:MarketList_MAUI.Converters"
             x:Class="MarketList_MAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <converters:StatusToTextDecorationConverter x:Key="StatusToTextDecorationConverter"/>
            <converters:StatusToTextConverter x:Key="StatusToTextConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
